<div class="container perks">
  <div class="container-fluid">
    <div class="row">
      <div class="perks-heading">
        <h1>All Lunch Groups for 04/04/2014</h1>
        <div class="dotted-line"></div>
      </div>
      <div class="col-md-12 content">
        <div class="row thumbnails">
          <div class="col-xs-6 col-md-4">
            <% LunchGroup.where(:event_id => 4).each do |lg| %>
            <div class="thumbnail">
              <div class="caption">
                <h3><b><%= lg.restaurant.name %><b/></h3>
                <% lg.signups.each do |s| %>
                  <h5><%= s.email %></h5>
                <% end %>
              </div>
            </div>
            <% end %> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

