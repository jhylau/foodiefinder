          </div>
      </div>
  </div><!-- /.carousel -->



    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->
    <div class="second-section">
      <div class="container marketing">

       <!-- Three columns of text below the carousel -->
        <div class="row featurette how-it-works">
          <div class="col-lg-4">
            <i class="fa fa-calendar-o"></i>
            <h2>1 - Sign Up</h2>
            <p>Choose a date for lunch</p>
          </div><!-- /.col-lg-4 -->
          <div class="col-lg-4">
            <i class="fa fa-check-square-o"></i>
            <h2>2 - Pick Options</h2>
            <p>Food type, people, etc</p>
          </div><!-- /.col-lg-4 -->
          <div class="col-lg-4"> 
            <i class="fa fa-smile-o"></i> 
            <h2>3 - Get Lucky!</h2>
            <p>See who you will eat with</p>
          </div><!-- /.col-lg-4 -->
        </div><!-- /.row -->
      </div>
    </div>
      <!-- START THE FEATURETTES -->
  <div class="fourth-section">
    <div class="container marketing">
      <div class="row featurette">
        <div class="col-md-5">
          <h2 class="featurette-heading" id="featurette-sub-heading">Lunch Place of the Month</h2>
          <%= image_tag("dguru.jpg", :class=>'img-responsive featurette-image') %>
        </div><!-- /.col-lg-4 -->
        <div class="col-md-7">
          <h2 class="featurette-heading" id="featurette-sub-heading">If you're going to eat,<br><span class="text-muted"> #eat-together.</span></h2>
          <h3>FoodieFinder - A new way to connect people and food at VMC.</h3>
        </div>
      </div><!-- /.row -->
    </div>
