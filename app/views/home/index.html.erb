      <div class="carousel-inner">
        <div class="item active">
          <img alt: "Pathway to Sustainability" title: "Pathway to Sustainability" class='img-landing'></img>
          <div class="container">
            <div class="carousel-caption">
              <p id="notice"><%= flash[:notice] %></p>
              <%= image_tag('foodiefinder.png')  %>  
